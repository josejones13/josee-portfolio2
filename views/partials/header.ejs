<header class="site-header py-3 mb-4 border-bottom">
  <div class="container d-flex flex-wrap justify-content-between align-items-center">
    <a href="/" class="d-flex align-items-center mb-2 mb-md-0 text-dark text-decoration-none">
      <span class="brand fs-4"><strong><%= site.name %></strong></span>
    </a>

    <nav class="nav">
      <% site.nav.forEach(function(item){ %>
        <a class="nav-link px-2" href="<%= item.href %>"><%= item.label %></a>
      <% }) %>
    </nav>
  </div>
</header>
